<%= simple_form_for(user) do |f| %>
    <%= f.input :username, label_html: { class: 'col-2 col-form-label' }, input_html: { class: 'form-control col-10' } %>
    <%= f.input :email, label_html: { class: 'col-2 col-form-label' }, input_html: { class: 'form-control col-10' } %>
    <%= f.input :password, label_html: { class: 'col-2 col-form-label' }, input_html: { class: 'form-control col-10' } %>
    <%= f.button :submit, "Sign Up", class:"btn btn-outline-light btn-lg" %>
<% end %>
